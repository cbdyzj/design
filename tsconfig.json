{
    "compilerOptions": {
        "module": "ES2020",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "target": "ES2020",
        "outDir": "dist",
        "jsx": "react",
        "allowJs": true,
        "lib": [
            "ES2020",
            "DOM"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ]
}